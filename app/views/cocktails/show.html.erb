<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= @cocktail.photo.url(:bright_face) %>);">
  <div class="banner-content">
    <h2><%= @cocktail.name %></h2>
  </div>
</div>

  <% @cocktail.doses.each do |dose| %>
    <p>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to dose_path(dose),
          method: :delete,
          data: { confirm: "Êtes-vous sûr ?" } do %>
          <i class="fa fa-trash-o" aria-hidden="true"></i>
    </p>
    <% end %>
  <% end %>

<br />
<br />
<p><%= link_to "Ajouter une dose", new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to "Retour à la liste", cocktails_path(@cocktails) %></p>
